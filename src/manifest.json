{
  "name": "Select option extension",
  "version": "1.0.0",
  "description": "Deals with <select> options : filter, copy and paste",
  "manifest_version": 2,
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "filter": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Filter values inside select"
    },
    "copy":{
      "suggested_key": {
        "default": "Alt+Shift+C"
      },
      "description": "Copy selected value"
    },
    "paste":{
      "suggested_key": {
        "default": "Alt+Shift+V"
      },
      "description": "Paste selected value"
    }
  },
  "icons": {
    "128": "assets/logo128.png"
  },
  "minimum_chrome_version": "63"
}
